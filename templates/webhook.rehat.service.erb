[Unit]
Description=R10K Webhook Service
After=syslog.target network.target

[Service]
Type=forking
User=<%= @user %>
TimeoutStartSec=90
TimeoutStopSec=30
PIDFile=/var/run/webhook/webhook.pid
ExecStart=/usr/local/bin/webhook

KillMode=process

StandardOutput=syslog

[Install]
WantedBy=multi-user.target
